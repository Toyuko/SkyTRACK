APP_NAME=SkyTRACK
APP_ENV=local
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database (MongoDB)
DB_CONNECTION=mongodb
DB_HOST=mongodb
DB_PORT=27017
DB_DATABASE=skynet
DB_USERNAME=skynet
DB_PASSWORD=skynet

# Redis (flight state cache + pub/sub)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Laravel Reverb (WebSocket server)
REVERB_APP_ID=skytrack
REVERB_APP_KEY=skytrack-key
REVERB_APP_SECRET=skytrack-secret
REVERB_HOST=0.0.0.0
REVERB_PORT=8080

# Broadcasting
BROADCAST_DRIVER=reverb

# SkyTRACK Feeder Authentication
SKYTRACK_FEEDER_TOKEN=change-me-in-production
SKYTRACK_FLIGHT_TTL=300
